// Swift Courier Services – Hyper‑Local Delivery MVP
// Tech stack: React + Vite + Firebase + WhatsApp ordering

import { useState } from "react";

export default function App() {
  const [order, setOrder] = useState({ name: "", pickup: "", dropoff: "", phone: "" });

  const submitOrder = () => {
    const message = `New Delivery Request%0AName: ${order.name}%0APickup: ${order.pickup}%0ADropoff: ${order.dropoff}%0APhone: ${order.phone}`;
    window.location.href = `https://wa.me/2547XXXXXXXX?text=${message}`;
  };

  return (
    <div className="min-h-screen flex items-center justify-center bg-gray-100 p-6">
      <div className="bg-white p-6 rounded-2xl shadow-xl w-full max-w-md">
        <h1 className="text-2xl font-bold mb-4">Swift Courier Services</h1>
        <p className="text-sm text-gray-600 mb-4">Fast, same‑day deliveries within Nairobi estates</p>

        <input className="border p-2 w-full mb-2" placeholder="Your Name" onChange={e => setOrder({ ...order, name: e.target.value })} />
        <input className="border p-2 w-full mb-2" placeholder="Pickup Location" onChange={e => setOrder({ ...order, pickup: e.target.value })} />
        <input className="border p-2 w-full mb-2" placeholder="Drop‑off Location" onChange={e => setOrder({ ...order, dropoff: e.target.value })} />
        <input className="border p-2 w-full mb-4" placeholder="Phone Number" onChange={e => setOrder({ ...order, phone: e.target.value })} />

        <button onClick={submitOrder} className="bg-black text-white w-full py-2 rounded-xl">
          Request Delivery (WhatsApp)
        </button>
      </div>
    </div>
  );
}
